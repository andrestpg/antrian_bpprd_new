<!doctype html>
<html lang="en">

    <head>
        <meta charset="utf-8" />
        <title>Login</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <!-- App favicon -->
        <link rel="shortcut icon" href="https://pilkada.jambikota.go.id/assets/front/image/favicon.ico">

        <!-- Bootstrap Css -->
        <link href="/admin_template/dist/assets/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
        <!-- Icons Css -->
        <link href="/admin_template/dist/assets/css/icons.min.css" rel="stylesheet" type="text/css" />
        <!-- App Css-->
        <link href="/admin_template/dist/assets/css/app.min.css" rel="stylesheet" type="text/css" />
        <link href="/admin_template/dist/assets/css/loader.css" rel="stylesheet" type="text/css" />
        <script>
        </script>

    </head>
    <style>
        .form-group-custom label{
            top: 3px;
            padding: 4px 8px;
        }

        .alert.alert-warning.mb-4{
            transition: .5s ease;
        }

        .alert.alert-warning.mb-4.hide{
            height: 0;
            border-width: 0;
            overflow: hidden;
            padding-top: 0;
            padding-bottom: 0;
            transition: .1s ease;
        }

        .alert.alert-warning.mb-4 span{
            display: none;
        }

        .center-wrapper{
            display: flex;
            width: 100%;
            min-height: 100vh;
            justify-content: center;
            align-items: center;
            overflow-y: auto;
        }

        .card.card-login{
            width: 23rem !important;
            min-width: 16rem !important;
            max-width: 100% !important;
        }
        
    </style>

    <body class="bg-primary bg-pattern">
        <div class="center-wrapper p-3">
            
            <div class="card card-login">
                <div class="card-body p-4">
                    <div class="p-2">
                        <div class="w-100 text-center">
                            <img src="../admin_template/dist/assets/images/mini-logo.png" alt="" height="60px">
                        </div>
                        <h4 class="text-center font-weight-bold my-4">Antrian Disdukcapil</h4>
                        <h4 class="h4">Login</h4>
                        <p class="mb-4">Silahkan masukan kredensial Anda untuk mendapatkan akses.</p>
                        <div class="alert alert-warning mb-4 hide" role="alert" id="authAlert">
                            <span id="authMsg">Error message here</span> 
                        </div>
                        <form class="form-horizontal" action="/auth/login" method="post" id="authForm">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group form-group-custom mb-4">
                                        <input type="text" class="form-control" id="username" name="username">
                                        <label for="username">User Name</label>
                                    </div>

                                    <div class="form-group form-group-custom mb-4">
                                        <input type="password" class="form-control" id="password" name="password">
                                        <label for="userpassword">Password</label>
                                    </div>
                                    <div class="custom-control custom-checkbox">
                                        <input type="checkbox" checked class="custom-control-input" name="remember" id="customControlInline">
                                        <label class="custom-control-label" for="customControlInline">Remember me</label>
                                    </div>
                                    <div class="mt-4">
                                        <button class="btn btn-primary btn-block waves-effect waves-light d-flex justify-content-center align-items-center" type="submit">
                                            <div class="loader-wrapper hide">
                                                <div class="loader"></div>
                                            </div>
                                            <span class="mx-2" id="authBtnText">Login</span>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- end Account pages -->

        <!-- JAVASCRIPT -->
        <script src="/admin_template/dist/assets/libs/jquery/jquery.min.js"></script>
        <script src="/admin_template/dist/assets/libs/bootstrap/js/bootstrap.bundle.min.js"></script>
        <script src="/admin_template/dist/assets/libs/metismenu/metisMenu.min.js"></script>
        <script src="/admin_template/dist/assets/libs/simplebar/simplebar.min.js"></script>
        <script src="/admin_template/dist/assets/libs/node-waves/waves.min.js"></script>
        <script src="/admin_template/dist/assets/js/app.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/validate-js/2.0.1/validate.min.js" integrity="sha512-8GLIg5ayTvD6F9ML/cSRMD19nHqaLPWxISikfc5hsMJyX7Pm+IIbHlhBDY2slGisYLBqiVNVll+71CYDD5RBqA==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
        <script src="/admin_template/dist/assets/js/validation/authValidation.js"></script>
        <script src="/admin_template/dist/assets/js/auth.js"></script>

    </body>
</html>
