
<%- include('./part/header-grid.ejs') %>
<main class="main-content h-[80vh] print:hidden">
    <div class="w-full h-full flex items-center p-8 ">
        <div class="grid grid-rows-4 grid-cols-4 gap-10 w-full h-[80vh]">
            <div class="col-span-2 row-span-3">
                <div class="w-full h-full bg-neutral-focus border-4 border-white rounded-lg shadow-lg">
                    <video class="w-full h-full video-js" id="videojs" muted autoplay preload="auto">
                        <p class="vjs-no-js">
                            To view this video please enable JavaScript, and consider upgrading to a web browser that
                            <a href="https://videojs.com/html5-video-support/" target="_blank">supports HTML5 video</a>
                        </p>
                    </video>
                </div>
            </div>
            <div class="col-span-2 w-full">
                <div class="w-full h-full bg-white rounded-lg relative shadow-lg">
                    <div class="ribbon ribbon-css ribbon-triangle">NOMOR ANTRIAN</div>
                    <div class="w-full h-full">
                        <!-- loket-wrapper -->
                        <div class="w-full h-full py-8 grid grid-rows-5 gap-4">
                            <% lokets.forEach(loket => { %> 
                                <!-- loket -->
                                <div class="w-full h-fit grid grid-cols-5 loket">
                                    <div class="col-span-3 flex flex-col rounded-r-md items-center py-2 px-4 bg-error font-bold">
                                        <p class="text-2xl w-full block text-left text-white">LOKET <%= loket.noLoket %> </p>
                                        <p class="whitespace-nowrap w-full block text-right text-yellow-200"><%= loket.layanan.nama %> </p>
                                    </div>
                                    <div class="col-span-2 flex items-center py-2 px-4">
                                        <p class="text-4xl pl-4 font-bold text-red-700"><%= loket.id %> </p>
                                    </div>
                                </div>
                            <% }); %>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <input type="checkbox" id="modalToggle" class="modal-toggle" />
        <div class="modal backdrop-blur-sm">
            <div class="modal-box modal-box-shadow max-w-[50%] relative overflow-hidden p-0">
                <div class="w-40 h-40 absolute top-0 left-0 rounded-full bg-primary/20 -mt-8 ml-[10%] rotate-[130deg]"></div>
                <div class="w-60 h-60 absolute bottom-0 left-0 rounded-full bg-primary/20 -mb-24 ml-[30%] rotate-[130deg]"></div>
                <div class="w-80 h-40 absolute top-0 right-0 rounded-full bg-success/20 mt-20 -mr-10 rotate-[130deg]"></div>
                <div class="w-32 h-32 absolute top-0 right-0 rounded-box bg-success/20 -mt-12 mr-[40%] rotate-45"></div>
                <div class="flex gap-10 items-center py-16 backdrop-blur-lg justify-center text-base-content/90 inset-white">
